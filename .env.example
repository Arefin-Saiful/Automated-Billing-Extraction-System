# ---------- App ----------
APP_ENV=prod
LOG_LEVEL=info
API_HOST=0.0.0.0
API_PORT=8000

# ---------- Database (ODBC) ----------
# Primary connection string used by the app (preferred)
SQLSERVER_CONN_STR=Driver={ODBC Driver 17 for SQL Server};Server=YOUR_SQL_SERVER_HOST;Database=Telco Bills;UID=YOUR_DB_USER;PWD=YOUR_DB_PASSWORD;Encrypt=yes;TrustServerCertificate=yes;

# Optional: legacy / compatibility DSN (used only as fallback if needed)
DB_ODBC_STR=Driver={ODBC Driver 17 for SQL Server};Server=YOUR_SQL_SERVER_HOST;Database=Telco Bills;UID=YOUR_DB_USER;PWD=YOUR_DB_PASSWORD;Encrypt=yes;TrustServerCertificate=yes;

# Persistence mode:
#   SP      → use stored procedures
#   TABLES  → use TelcoLoader to write directly into tables
TELCO_PERSIST_MODE=SP

# Master switch for *all* DB writes (SP or TABLES)
ENABLE_DB_WRITE=true

# Compatibility / mirror vars
SQLSERVER_HOST=YOUR_SQL_SERVER_HOST
SQLSERVER_DB=Telco Bills
SQLSERVER_USER=YOUR_DB_USER
SQLSERVER_PASSWORD=YOUR_DB_PASSWORD
SQLSERVER_DRIVER=ODBC Driver 17 for SQL Server

DB_DRIVER=ODBC Driver 17 for SQL Server
DB_SERVER=YOUR_SQL_SERVER_HOST
DB_DATABASE=Telco Bills
DB_USERNAME=YOUR_DB_USER
DB_PASSWORD=YOUR_DB_PASSWORD
DB_ENCRYPT=yes
DB_TRUST_CERT=yes
DB_TIMEOUT=5

# ---------- DB objects ----------
DB_SCHEMA=dbo

DB_SP_UPSERT_INVOICE=sp_Upsert_InvoicePackage_JSON
DB_SP_UPSERT_INVOICE_MAXIS=sp_Upsert_InvoicePackage_JSON
DB_SP_UPSERT_INVOICE_CELCOM=sp_Upsert_InvoicePackage_JSON_Celcom
DB_SP_UPSERT_INVOICE_DIGI=sp_Upsert_InvoicePackage_JSON_Digi

# ---------- File handling ----------
UPLOAD_DIR=uploads
TEMP_DIR=.tmp
ALLOWED_EXTENSIONS=.pdf

# ---------- Feature toggles ----------
ENABLE_VENDOR_DETECT=true
